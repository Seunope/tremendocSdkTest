<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView android:src="@drawable/background_login"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View android:background="@color/colorPrimaryTrans"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.signup.StepOne">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/title"
                android:text="Talk To Doctor"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:backgroundTint="@color/colorWhite"
                android:progressTint="@color/colorGray"
                android:progress="14"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <!--<ImageView android:id="@+id/logo"-->
                <!--android:layout_margin="10dp"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/progressBar"-->
                <!--app:layout_constraintStart_toStartOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"-->
                <!--android:src="@drawable/logo_text"-->
                <!--android:layout_width="@dimen/size_200"-->
                <!--android:layout_height="wrap_content" />-->

            <RelativeLayout android:id="@+id/form"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/username_wrapper"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText android:id="@+id/username"
                        android:hint="Username"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pass_wrapper"

                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_below="@+id/username_wrapper"
                    android:layout_width="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content">
                    <EditText android:id="@+id/password"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton android:id="@+id/reveal_btn"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/username_wrapper"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_eye_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/pass_hint"
                    android:text="Not less that 6 characters"
                    android:layout_below="@+id/pass_wrapper"
                    android:layout_marginTop="-17dp"
                    android:layout_marginStart="25dp"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pass2_wrapper"

                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_below="@+id/pass_wrapper"
                    android:layout_width="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content">
                    <EditText android:id="@+id/password_confirm"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView android:id="@+id/indicator"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/pass_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button android:id="@+id/signup_btn"
                    android:text="Sign up"
                    android:layout_below="@+id/pass2_wrapper"
                    android:layout_marginTop="@dimen/size_40"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="@drawable/login_btn_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <!--<TextView android:id="@+id/desc"-->
                <!--android:visibility="gne"-->
                <!--android:text="What name would you like to be referred to as"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:gravity="center"-->
                <!--android:layout_margin="15dp"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/logo"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <TextView android:id="@+id/signin"
                android:text="Oops I already have an account? Sign In"
                android:textSize="@dimen/font_14"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/form"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginEnd="@dimen/size_40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/terms"
                android:text="By signing up you are agreeing to the Terms of Service and Privacy Policy"
                android:textSize="@dimen/font_12"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/signin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginEnd="@dimen/size_40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</RelativeLayout>
