<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryTrans" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView android:id="@+id/title"
                android:text="Talk To Doctor"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:backgroundTint="@color/colorWhite"
                android:progressTint="@color/colorGray"
                android:progress="14"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="0dp">
                <RelativeLayout
                    android:id="@+id/form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:padding="10dp"
                    >


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/firstname_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="@dimen/size_10">

                        <EditText
                            android:id="@+id/firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="First Name"
                            android:inputType="text"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="@dimen/font_14" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lastname_wrapper"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/firstname_wrapper"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_alignParentLeft="true">

                        <EditText
                            android:id="@+id/lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Last Name"
                            android:inputType="text"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="@dimen/font_14" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dob_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginEnd="20dp"
                        android:layout_below="@+id/lastname_wrapper"
                        android:layout_marginBottom="@dimen/size_10">

                        <EditText
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="DOB"
                            android:inputType="text"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="@dimen/font_14" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_wrapper"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dob_wrapper"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginEnd="20dp"

                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_alignParentLeft="true">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Email"
                            android:inputType="text"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="@dimen/font_14" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phone_wrapper"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_wrapper"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginEnd="20dp"

                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_alignParentLeft="true">

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Email"
                            android:inputType="phone"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="@dimen/font_14" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/gender_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginEnd="20dp"
                        android:layout_below="@+id/phone_wrapper"
                        android:layout_marginBottom="@dimen/size_10">

                        <AutoCompleteTextView
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Gender"
                            android:inputType="text"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="@dimen/font_14" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/username_wrapper"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_below="@+id/gender_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText android:id="@+id/username"
                            android:hint="Username"
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:backgroundTint="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/password_wrapper"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_below="@+id/username_wrapper"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content">
                        <EditText android:id="@+id/password"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:backgroundTint="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton android:id="@+id/reveal_btn"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_below="@+id/username_wrapper"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_eye_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView android:id="@+id/pass_hint"
                        android:text="Not less that 6 characters"
                        android:layout_below="@+id/password_wrapper"
                        android:layout_marginTop="-17dp"
                        android:layout_marginStart="25dp"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pass2_wrapper"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_below="@+id/password_wrapper"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content">
                        <EditText android:id="@+id/password_confirm"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:backgroundTint="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView android:id="@+id/indicator"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/password_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <Button
                        android:id="@+id/signup_btn"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pass2_wrapper"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/size_40"
                        android:background="@drawable/login_btn_bg"
                        android:text="Sign Up"
                        android:onClick="SignUp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_14"
                        android:textStyle="bold" />

                </RelativeLayout>

            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>
